{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "redirects": [
    {
      "source": "/",
      "has": [{ "type": "host", "value": "www.manova.life" }],
      "destination": "https://manova.life/",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.manova.life" }],
      "destination": "https://manova.life/$1",
      "permanent": true
    }
  ],

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
